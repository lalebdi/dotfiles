{
  "coc.preferences.extensionUpdateCheck": "never",
  "coc.source.emoji.filetypes": ["markdown", "rst"],
  "coc.source.dictionary.filetypes": ["markdown", "rst"],
  "coc.source.word.filetypes": ["markdown", "rst"],
  "suggest.autoTrigger": "always",
  "suggest.noselect": true,
  "diagnostic.enable": true,
  "signature.hideOnTextChange": true,
  "signature.enable": false,
  "jedi.markupKindPreferred": "plaintext",
  "jedi.jediSettings.autoImportModules": ["numpy"],
  "jedi.diagnostics.enable": false,
  "vimlsp.suggest.fromRuntimepath": true,
  "vimlsp.indexes.count": 50,
  "java.enabled": false,
  "list.normalMappings": {
    "<C-v>": "action:vsplit",
    "<C-x>": "action:split",
    "<C-t>": "action:tabe"
  },
  "list.insertMappings": {
    "<C-v>": "action:vsplit",
    "<C-x>": "action:split",
    "<C-t>": "action:tabe"
  },
  "pairs.enableCharacters": ["(", "[", "{", "<", "\"", "'"],
  "yaml.schemas": {
    "https://raw.githubusercontent.com/docker/compose/master/compose/config/config_schema_v3.8.json": "/*docker-compose.yml"
  },
  "diagnostic-languageserver.filetypes": {
    "python": "pylint"
  },
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  "diagnostic-languageserver.linters": {
    "pylint": {
      "sourceName": "pylint",
      "command": "pylint",
      "args": [
        "--output-format",
        "text",
        "--score",
        "no",
        "--msg-template",
        "'{line}:{column}:{category}:{msg} ({msg_id}:{symbol})'",
        "%file"
      ],
      "formatPattern": [
        "^(\\d+?):(\\d+?):([a-z]+?):(.*)$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "rootPatterns": ["pyproject.toml", "setup.py", ".git"],
      "securities": {
        "informational": "hint",
        "refactor": "info",
        "convention": "info",
        "warning": "warning",
        "error": "error",
        "fatal": "error"
      },
      "offsetColumn": 1,
      "formatLines": 1
    },
    "languagetool": {
      "command": "languagetool",
      "debounce": 200,
      "args": ["-"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "languagetool",
      "formatLines": 2,
      "formatPattern": [
        "^\\d+?\\.\\)\\s+Line\\s+(\\d+),\\s+column\\s+(\\d+),\\s+([^\\n]+)\nMessage:\\s+(.*)(\\r|\\n)*$",
        {
          "line": 1,
          "column": 2,
          "message": [4, 3]
        }
      ],
    }
  },
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["Dockerfile"],
      "args": ["--stdio"]
    },
    "terraform-ls": {
      "command": "terraform-ls",
      "filetypes": ["terraform"],
      "rootPatterns": ["Makefile", ".git"],
      "args": ["serve"]
    },
    "tflint": {
      "command": "tflint",
      "filetypes": ["terraform"],
      "rootPatterns": ["Makefile", ".git"],
      "args": ["--langserver"]
    },
    "cobol": {
      "command": "cobol-language-server",
      "filetypes": ["cobol"],
      "initializationOptions": {}
    }
  }
}
