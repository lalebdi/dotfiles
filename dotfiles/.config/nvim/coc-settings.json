{
  "coc.preferences.enableFloatHighlight": false,
  "suggest.autoTrigger": "always",
  "suggest.noselect": true,
  "diagnostic.enable": false,
  "signature.hideOnTextChange": true,
  "signature.enable": false,
  "vimlsp.suggest.fromRuntimepath": true,
  "vimlsp.indexes.count": 50,
  "list.normalMappings": {
    "<C-v>": "action:vsplit",
    "<C-x>": "action:split",
    "<C-t>": "action:tabe"
  },
  "list.insertMappings": {
    "<C-v>": "action:vsplit",
    "<C-x>": "action:split",
    "<C-t>": "action:tabe"
  },
  "pairs.enableCharacters": ["(", "[", "{", "<"],
  "yaml.schemas": {
    "https://raw.githubusercontent.com/docker/compose/master/compose/config/config_schema_v3.8.json": "/*docker-compose.yml"
  },
  "diagnostic-languageserver.filetypes": {
    "python": "pylint"
  },
  "suggest.completionItemKindLabels": {
    "function": "(f)",
    "method": "(method)",
    "variable": "(v)",
    "constant": "(const)",
    "struct": "(s)",
    "class": "(c)",
    "interface": "(i)",
    "text": "(t)",
    "enum": "(e)",
    "enumMember": "(em)",
    "module": "(m)",
    "color": "(color)",
    "property": "(p)",
    "field": "(field)",
    "unit": "(unit)",
    "file": "(file)",
    "value": "(value)",
    "event": "(event)",
    "folder": "(folder)",
    "keyword": "(k)",
    "snippet": "(snip)",
    "operator": "(o)",
    "reference": "(r)",
    "typeParameter": "(tp)",
    "default": "{}"
  },
  "diagnostic-languageserver.linters": {
    "pylint": {
      "sourceName": "pylint",
      "command": "pylint",
      "args": [
        "--output-format",
        "text",
        "--score",
        "no",
        "--msg-template",
        "'{line}:{column}:{category}:{msg} ({msg_id}:{symbol})'",
        "%file"
      ],
      "formatPattern": [
        "^(\\d+?):(\\d+?):([a-z]+?):(.*)$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "securities": {
        "informational": "hint",
        "refactor": "info",
        "convention": "info",
        "warning": "warning",
        "error": "error",
        "fatal": "error"
      },
      "offsetColumn": 1,
      "formatLines": 1
    }
  },
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["Dockerfile"],
      "args": ["--stdio"]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "cobol": {
      "command": "cobol-language-server",
      "filetypes": ["cobol"],
      "initializationOptions": {}
    }
  }
}
